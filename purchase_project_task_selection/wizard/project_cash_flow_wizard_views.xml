<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_cash_flow_wizard_form" model="ir.ui.view">
        <field name="name">project.cash.flow.wizard.form</field>
        <field name="model">project.cash.flow.wizard</field>
        <field name="arch" type="xml">
            <form string="Flujo de Caja por Proyecto">
                <group>
                    <group>
                        <field name="date_from" required="1"/>
                        <field name="date_to" required="1"/>
                    </group>
                    <group>
                        <field name="company_id" groups="base.group_multi_company"/>
                        <field name="project_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="include_order_links_fallback"/>
                    </group>
                </group>
                <div class="text-muted o_form_label">
                    Si no se seleccionan proyectos, se incluyen todos los proyectos de la compania actual.
                </div>
                <footer>
                    <button name="action_print_report" type="object" string="Imprimir PDF" class="btn-primary"/>
                    <button string="Cancelar" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_project_cash_flow_wizard" model="ir.actions.act_window">
        <field name="name">Flujo de caja por proyecto</field>
        <field name="res_model">project.cash.flow.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_project_cash_flow_wizard_form"/>
        <field name="target">new</field>
    </record>

    <menuitem
        id="menu_project_cash_flow_wizard"
        name="Flujo de caja por proyecto"
        parent="project.menu_main_pm"
        action="action_project_cash_flow_wizard"
        sequence="85"
        groups="account.group_account_readonly"
    />
</odoo>
