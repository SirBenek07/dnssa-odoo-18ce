<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_form_project_task_selection" model="ir.ui.view">
        <field name="name">purchase.order.form.project.task.selection</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list//field[@name='name']" position="after">
                <field
                    name="project_id"
                    optional="show"
                    domain="['|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"
                    readonly="parent.state not in ('draft', 'sent', 'to approve')"
                />
                <field
                    name="task_id"
                    optional="show"
                    domain="[
                        ('parent_id', '=', False),
                        ('is_template_project', '=', False),
                        ('is_task_template', '=', False),
                        ('project_id', '=?', project_id),
                        '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)
                    ]"
                    readonly="parent.state not in ('draft', 'sent', 'to approve')"
                />
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='product_id']" position="after">
                <field
                    name="project_id"
                    domain="['|', ('company_id', '=', False), ('company_id', '=', parent.company_id)]"
                    readonly="parent.state not in ('draft', 'sent', 'to approve')"
                />
                <field
                    name="task_id"
                    domain="[
                        ('parent_id', '=', False),
                        ('is_template_project', '=', False),
                        ('is_task_template', '=', False),
                        ('project_id', '=?', project_id),
                        '|', ('company_id', '=', False), ('company_id', '=', parent.company_id)
                    ]"
                    readonly="parent.state not in ('draft', 'sent', 'to approve')"
                />
            </xpath>
        </field>
    </record>
</odoo>
