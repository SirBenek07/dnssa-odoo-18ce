<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_project_cash_flow" model="ir.actions.report">
        <field name="name">Flujo de Caja por Proyecto</field>
        <field name="model">project.cash.flow.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">purchase_project_task_selection.report_project_cash_flow</field>
        <field name="report_file">purchase_project_task_selection.report_project_cash_flow</field>
        <field name="print_report_name">'Flujo de Caja - %s' % (object.company_id.name)</field>
        <field name="binding_model_id" ref="model_project_cash_flow_wizard"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_project_cash_flow">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Flujo de Caja por Proyecto</h2>
                    <p>
                        <strong>Compania:</strong>
                        <span t-esc="data['company'].display_name"/>
                        <br/>
                        <strong>Periodo:</strong>
                        <span t-esc="data['date_from']"/>
                        <span> - </span>
                        <span t-esc="data['date_to']"/>
                    </p>

                    <table class="table table-sm" style="font-size: 12px; border: 1px solid #999;">
                        <thead>
                            <tr style="background-color: #d6ecd2;">
                                <th>Detalle</th>
                                <t t-foreach="data['periods']" t-as="period">
                                    <th class="text-end" t-esc="period['label']"/>
                                </t>
                            </tr>
                        </thead>
                        <tbody>
                            <tr style="background-color: #c4e7c3; font-weight: bold;">
                                <td colspan="99">1. Detalle de Ingresos</td>
                            </tr>
                            <t t-foreach="data['lines']" t-as="line">
                                <tr>
                                    <td>
                                        <span t-esc="line['project'].display_name"/>
                                    </td>
                                    <t t-foreach="data['periods']" t-as="period">
                                        <td class="text-end">
                                            <span t-out="line['income'][period['key']]" t-options="{'widget': 'monetary', 'display_currency': data['currency']}"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                            <tr style="background-color: #d6ecd2; font-weight: bold; border-top: 1px solid #888;">
                                <td>Total de Ingresos</td>
                                <t t-foreach="data['periods']" t-as="period">
                                    <td class="text-end">
                                        <span t-out="data['totals']['income'][period['key']]" t-options="{'widget': 'monetary', 'display_currency': data['currency']}"/>
                                    </td>
                                </t>
                            </tr>

                            <tr><td colspan="99" style="height: 6px; background-color: #ffffff; border: none;"></td></tr>

                            <tr style="background-color: #f4efb2; font-weight: bold;">
                                <td colspan="99">2. Detalle de Egresos</td>
                            </tr>
                            <t t-foreach="data['lines']" t-as="line">
                                <tr>
                                    <td>
                                        <span t-esc="line['project'].display_name"/>
                                    </td>
                                    <t t-foreach="data['periods']" t-as="period">
                                        <td class="text-end">
                                            <span t-out="line['expense'][period['key']]" t-options="{'widget': 'monetary', 'display_currency': data['currency']}"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                            <tr style="background-color: #f4efb2; font-weight: bold; border-top: 1px solid #888;">
                                <td>Total de Egresos</td>
                                <t t-foreach="data['periods']" t-as="period">
                                    <td class="text-end">
                                        <span t-out="data['totals']['expense'][period['key']]" t-options="{'widget': 'monetary', 'display_currency': data['currency']}"/>
                                    </td>
                                </t>
                            </tr>

                            <tr><td colspan="99" style="height: 6px; background-color: #ffffff; border: none;"></td></tr>

                            <tr style="background-color: #b9deef; font-weight: bold; border-top: 1px solid #888;">
                                <td>3.0 Saldo Neto</td>
                                <t t-foreach="data['periods']" t-as="period">
                                    <td class="text-end">
                                        <span t-out="data['totals']['net'][period['key']]" t-options="{'widget': 'monetary', 'display_currency': data['currency']}"/>
                                    </td>
                                </t>
                            </tr>
                            <tr style="background-color: #b9deef; font-weight: bold;">
                                <td>4.0 Saldo Acumulado</td>
                                <t t-foreach="data['periods']" t-as="period">
                                    <td class="text-end">
                                        <span t-out="data['totals']['accumulated'][period['key']]" t-options="{'widget': 'monetary', 'display_currency': data['currency']}"/>
                                    </td>
                                </t>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
