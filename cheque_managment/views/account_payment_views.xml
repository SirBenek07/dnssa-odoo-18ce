<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_form_inherit_cheque_managment" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.cheque.managment</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group2']/field[@name='payment_method_line_id']" position="after">
                <field name="cheque_payment" invisible="1"/>
                <field name="cheque_record_id" invisible="1"/>
                <field
                    name="cheque_number"
                    invisible="not cheque_payment"
                    required="cheque_payment"
                    readonly="state != 'draft'"
                />
                <field
                    name="cheque_issue_date"
                    invisible="not cheque_payment"
                    required="cheque_payment"
                    readonly="state != 'draft'"
                />
                <field
                    name="cheque_cash_date"
                    invisible="not cheque_payment"
                    required="cheque_payment"
                    readonly="state != 'draft'"
                />
            </xpath>
        </field>
    </record>
</odoo>
