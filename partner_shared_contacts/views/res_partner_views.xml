<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_shared_contacts" model="ir.ui.view">
        <field name="name">res.partner.form.shared.contacts</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='contact_addresses']/field[@name='child_ids']" position="replace">
                <field
                    name="shared_contact_ids"
                    context="{'default_type': 'contact', 'default_is_company': False}"
                    domain="[('id', '!=', id)]"
                    mode="list"
                >
                    <list editable="bottom">
                        <field name="name"/>
                        <field name="function"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="mobile"/>
                    </list>
                </field>
            </xpath>
        </field>
    </record>
</odoo>
