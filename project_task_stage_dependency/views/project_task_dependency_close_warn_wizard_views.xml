<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_project_task_dependency_close_warn_wizard_v2" model="ir.actions.act_window">
        <field name="name">Confirmar cierre con advertencia</field>
        <field name="res_model">project.task.dependency.close.warn.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_project_task_dependency_close_warn_wizard_form" model="ir.ui.view">
        <field name="name">project.task.dependency.close.warn.wizard.form</field>
        <field name="model">project.task.dependency.close.warn.wizard</field>
        <field name="arch" type="xml">
            <form string="Advertencia" create="0" edit="0" delete="0">
                <group>
                    <field name="task_id" />
                    <field name="warning_message" nolabel="1" readonly="1" widget="text" />
                </group>
                <footer>
                    <button
                        name="action_confirm"
                        type="object"
                        string="Marcar como hecha igualmente"
                        class="btn-primary"
                    />
                    <button
                        name="action_cancel"
                        type="object"
                        string="Cancelar"
                        class="btn-secondary"
                    />
                </footer>
            </form>
        </field>
    </record>
</odoo>
