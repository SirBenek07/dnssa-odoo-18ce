<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_move_form_vendor_timbrado" model="ir.ui.view">
        <field name="name">account.move.form.vendor.timbrado</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@id='header_right_group']/field[@name='payment_reference']" position="after">
                <field name="timbrado" invisible="move_type != 'in_invoice'" required="move_type == 'in_invoice' and state == 'posted'"/>
                <field name="validez_timbrado" invisible="move_type != 'in_invoice'" required="move_type == 'in_invoice' and state == 'posted'"/>
            </xpath>
        </field>
    </record>
</odoo>
