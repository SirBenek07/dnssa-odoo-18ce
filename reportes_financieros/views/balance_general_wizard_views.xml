<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_balance_general_wizard_form" model="ir.ui.view">
        <field name="name">balance.general.wizard.form</field>
        <field name="model">balance.general.wizard</field>
        <field name="arch" type="xml">
            <form string="Balance General">
                <group>
                    <field
                        name="company_id"
                        groups="base.group_multi_company"
                        options="{'no_create': True}"
                    />
                    <field
                        name="date_range_id"
                        domain="['|', ('company_id', '=', company_id), ('company_id', '=', False)]"
                        options="{'no_create': True}"
                    />
                    <field name="date_from" />
                    <field name="date_to" />
                    <field name="show_accounts_without_moves" />
                    <field name="show_debit_credit_columns" />
                </group>
                <footer>
                    <button
                        name="action_print_pdf"
                        type="object"
                        string="Imprimir PDF"
                        class="btn-primary"
                    />
                    <button string="Cancelar" special="cancel" class="btn-secondary" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_balance_general_wizard" model="ir.actions.act_window">
        <field name="name">Balance General</field>
        <field name="res_model">balance.general.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_balance_general_wizard_form" />
        <field name="target">new</field>
    </record>

    <menuitem
        id="menu_reportes_financieros_root"
        name="Reportes Financieros"
        parent="account.menu_finance_reports"
        groups="account.group_account_user"
        sequence="80"
    />

    <menuitem
        id="menu_balance_general_wizard"
        name="Balance General"
        parent="menu_reportes_financieros_root"
        action="action_balance_general_wizard"
        groups="account.group_account_user"
        sequence="10"
    />
</odoo>
